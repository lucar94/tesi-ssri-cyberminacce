{
    "manifest_version": 3,
    "name": "The Sniffer - MiTB",
    "version": "1.0",
    "description": "An example of sniffer",
    "permissions":
    [
        "storage",
        "tabs",
        "activeTab"
    ],
    "content_scripts":
    [
        {
            "matches":
            [
                "<all_urls>"
            ],
            "all_frames": true,
            "js":
            [
                "content.js"
            ],
            "run_at": "document_idle",
            "world": "MAIN"
        }
    ],
    "action":
    {
        "default_icon":
        {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}